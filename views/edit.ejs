<%- include ('partials/header'); -%>
<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
<div class="container">
	<h1>Edit Blog</h1>
	<div class="form-group">
		<label for="title">Title</label>
		<input type="text" class="form-control id="title" name="blog[title]" value="<%=blog.title%>" placeholder="Post Title">
	</div>
	<div class="form-group">
		<label for="img">Image URL</label>
		<input type="text" class="form-control" id="img" name="blog[image]" value="<%=blog.image%>" placeholder="Image Url">
	</div>
	<div class="form-group">
		<label for="context">Content</label>
		<textarea id="context" name="blog[content]" class="form-control" rows="5"><%=blog.content%></textarea>
	</div>
	<div>
		<button type="submit" class="btn btn-primary btn-lg" >Submit</button>
	</div>
</div>
</form>
<%- include ('partials/footer'); -%>